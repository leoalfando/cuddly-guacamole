{
  "openapi": "3.0.0",
  "info": {
    "title": "Transaction Service",
    "version": "1.0.0"
  },
  "paths": {
    "/transactions": {
      "post": {
        "tags": ["Transaction"],
        "summary": "Create new transction",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "description": "authentication api key",
            "schema":{
              "type": "string"
            }
          }
        ],
        "requestBody":{
          "content": {
            "application/json": {
              "schema":{
                "example": {
                  "accountId": 100,
                  "transactionCode": 1,
                  "amount": 10000
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/transaction"
                }
              }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "example":{
                    "errors": [
                      "TRANSACTION_TRANSACTION_TYPE_INVALID"
                    ]
                  }
                }
              }
            },
            "description": "Bad request"
          }
        }
      },
      "get":{
        "tags": ["Transaction"],
        "summary": "Get transaction list",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "description": "authentication api key",
            "schema":{
              "type": "string"
            }
          },
          {
            "name": "accountId",
            "in": "query",
            "description": "account id",
            "example": "100",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "transactionCode",
            "in": "query",
            "description": "type of transaction #1 for CREDIT, #2 for DEBIT",
            "example": "2",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "page number",
            "example": "2",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "number of data per page",
            "example": "5",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "number of data per page",
            "example": "5",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Result with list of transaction",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/transaction"
                  }
                }
              }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "example":{
                    "errors": [
                      "TRANSACTION_GET_LIST_ACCOUNT_ID_MANDATORY",
                      "TRANSACTION_TRANSACTION_TYPE_INVALID"
                    ]
                  }
                }
              }
            },
            "description": "Bad request"
          }
        }
      }
    }
  },
  "components": {
    "schemas":{
      "transaction":{
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "transaction id",
            "example": "string#123"
          },
          "accountId":{
            "type": "integer",
            "description": "transaction owner id",
            "example": 100
          },
          "transactionCode":{
            "type": "integer",
            "description": "transaction type code",
            "example": 1
          },
          "amount":{
            "type": "integer",
            "description": "transaction amount",
            "example": 1000
          },
          "createdDate":{
            "type": "integer",
            "description": "transaction created date",
            "example": "2018-05-14T08:57:46.000Z"
          }
        }
      }
    }
  }
}
